@model LoginViewModel

@{
    ViewBag.Title = "HÜMAT - Giriş Yap";
}


<div class="row">
    <div class="col-md-5"></div>
    <div class="col-md-2">
        <h2>
            Yetkili Girişi
        </h2>
        <form method="post">
            <div class="form-group my-input-wrapper">
                <input class="form-control my-input"
                       placeholder="Email"
                       asp-for="Email"/>
                <span class="focus-my-input"
                      data-placeholder="&#x2709;">
                </span>
            </div>
            <div class="form-group my-input-wrapper">
                <input class="form-control my-input"
                       placeholder="Password"
                       asp-for="Password"/>
                <span class="focus-my-input"
                      data-placeholder="&#x1F511;"></span>
            </div>
            <div class="form-group my-input-wrapper">
                <label class="my-container">@Html.DisplayNameFor(m=>m.RememberMe)
                    <input type="checkbox" 
                           checked="checked"
                           asp-for="RememberMe">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="form-group row">
                <button type="submit"
                        class="btn btn-primary m-2">
                    Giriş Yap
                </button>
                <a href="javascript:history.back();"
                   class="btn btn-danger m-2">
                    İptal
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-5"></div>

</div>

<script>
    var toggle = document.querySelector('.toggleButton input')
    var animate = setInterval(() => {
        toggle.checked = !toggle.checked
    }, 3000)

    document.querySelector('body').addEventListener('click', () => {
        clearInterval(animate);
    })
</script>