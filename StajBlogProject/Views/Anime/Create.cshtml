@model AnimeCreateViewModel

@{
    ViewBag.Title = "HÜMAT - Anime Oluştur";
}

<form enctype="multipart/form-data"
      asp-controller="Anime"
      asp-action="Create"
      method="post"
      class="mt-3">
    <div asp-validation-summary="All"
         class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="Title"
                   class="form-control"
                   placeholder="Title" />
            <span asp-validation-for="Title"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="Summary"
                   class="form-control"
                   placeholder="Summary" />
            <span asp-validation-for="Summary"
                  class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="ImageUrl"
                   class="form-control"
                   placeholder="Image Url" />
            <span asp-validation-for="ImageUrl"
                  class="text-danger"></span>
        </div>
    </div>
        
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit"
                    class="btn btn-primary">
                Create
            </button>
            <a href="javascript:history.back();"
               class="btn btn-danger">
                Cancel
            </a>
        </div>
    </div>
</form>