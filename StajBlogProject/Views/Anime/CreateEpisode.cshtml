
@model AnimeEpisodeCreateViewModel

@{
    ViewBag.Title = "HÜMAT - " + Model.Anime.Title + " - Bölüm Oluştur";

}



<div class="row">
    <div class="col col-md-3"></div>
    <div class="col col-md-6">
        <form enctype="multipart/form-data"
              asp-controller="Anime"
              asp-action="CreateEpisode"
              method="post"
              class="mt-3">
            <div asp-validation-summary="All"
                 class="text-danger"></div>

            <div class="form-group my-input-wrapper">
                
                    <input asp-for="EpisodeNo"
                           class="form-control my-input"
                           placeholder="Episode #"/>
                    <span class="focus-my-input"
                          data-placeholder="&#x0023;"></span>
                    <span asp-validation-for="EpisodeNo"></span>
            </div>

            <div class="form-group my-input-wrapper">
                    <input asp-for="Title"
                           class="form-control my-input"
                           placeholder="Title"/>
                    <span class="focus-my-input"
                          data-placeholder="&#x270E;"></span>
                    <span asp-validation-for="Title"
                          class="text-danger"></span>
            </div>
            <div class="form-group my-input-wrapper">
                    <input asp-for="Alternative1"
                           class="form-control my-input"
                           placeholder="Alternative Link"/>
                    <span class="focus-my-input"
                          data-placeholder="&#x1f517;"></span>
                    <span asp-validation-for="Alternative1"
                          class="text-danger"></span>
            </div>
            <div class="form-group my-input-wrapper">
                    <input asp-for="Alternative2"
                           class="form-control my-input"
                           placeholder="Alternative Link"/>
                    <span class="focus-my-input"
                          data-placeholder="&#x1f517;"></span>
                    <span asp-validation-for="Alternative2"
                          class="text-danger"></span>
            </div>
            <div class="form-group my-input-wrapper">
                    <input asp-for="Alternative3"
                           class="form-control my-input"
                           placeholder="Alternative Link"/>
                    <span class="focus-my-input"
                          data-placeholder="&#x1f517;"></span>
                    <span asp-validation-for="Alternative3"
                          class="text-danger"></span>
            </div>
            <div class="form-group my-input-wrapper">
                    <input asp-for="Alternative4"
                           class="form-control my-input"
                           placeholder="Alternative Link"/>
                    <span class="focus-my-input"
                          data-placeholder="&#x1f517;"></span>
                    <span asp-validation-for="Alternative4"
                          class="text-danger"></span>
            </div>
            <div class="form-group my-input-wrapper">
                    <input asp-for="Alternative5"
                           class="form-control my-input"
                           placeholder="Alternative Link"/>
                    <span class="focus-my-input"
                          data-placeholder="&#x1f517;"></span>
                    <span asp-validation-for="Alternative5"
                          class="text-danger"></span>
            </div>

            <div class="form-group my-input-wrapper">
                    <button type="submit"
                            class="btn btn-primary">
                        Create
                    </button>
                    <a href="javascript:history.back();"
                       class="btn btn-danger">
                        Cancel
                    </a>
            </div>
        </form>
    </div>
    <div class="col col-md-3"></div>
</div>