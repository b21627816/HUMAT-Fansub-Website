@model PostEditViewModel

@{
    ViewBag.Title = "HÜMAT - " + Model.Title + " - Düzenle";
}

    <div style="height: 1000px">
        <form enctype="multipart/form-data"
              asp-controller="Blog"
              asp-action="Edit"
              method="post"
              class="mt-3">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="All"
                 class="text-danger"></div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input asp-for="Title"
                           class="form-control"
                           placeholder="Gönderi Başlığı" />
                    <span asp-validation-for="Title"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input asp-for="TextOnly"
                           class="form-control"
                           placeholder="Anasayfada slider ve post kutusunda görünecek yazı"/>
                    <span asp-validation-for="TextOnly"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.Text, new { @class = "form-control", placeholder = "Gönderi İçeriği" })
                    <span asp-validation-for="Text"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input asp-for="ImageUrl"
                           class="form-control"
                           placeholder="Kapak Resmi" />
                    <span asp-validation-for="ImageUrl"
                          class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit"
                            class="btn btn-primary">
                        Güncelle
                    </button>
                    <a href="javascript:history.back();"
                       class="btn btn-danger">
                        İptal
                    </a>
                </div>
            </div>

        </form>
    </div>


<script type="text/javascript" src="~/lib/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
    tinymce.init({
        selector: 'textarea',
        plugins: [
            'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            'searchreplace wordcount visualblocks visualchars code fullscreen',
            'insertdatetime media nonbreaking save table contextmenu directionality',
            'emoticons template paste textcolor colorpicker textpattern imagetools codesample'
        ],
        toolbar1: 'insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | print preview media | forecolor backcolor emoticons codesample',


        image_advtab: true,

        height: 500

    });
</script>